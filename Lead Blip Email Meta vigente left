SELECT DISTINCT
  Email;
  HasOptedOutOfEmail;
  Id;
  Status;
  Phone;
  Estado_IAL__c;
  Qual_equipamento_deseja fechar;
  Data_ultimo_Contato_;
  Interesse_de_negociação;
  CreatedDate;
  Desqualificado__c;
  LeadSource;
  LastName;
  FirstName
FROM Lead_Salesforce AS S
WHERE S.CreatedDate < DATEADD(MONTH, -1, GETDATE())
AND
  LeadSource IN ('Chat - Take Blip')
  OR
  LeadSource IN ('Email')
  OR
  LeadSource IN ('Meta')
AND
HasOptedOutOfEmail = 'FALSE'
